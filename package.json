{
  "name": "hoa-moe",
  "version": "1.2.0",
  "description": "HITSZ OpenAuto Website",
  "scripts": {
    "dev": "hugo server --disableFastRender -D -F",
    "build:css": "postcss --config postcss.config.mjs --env production assets/css/styles.css -o assets/css/compiled/main.css",
    "watch:css": "postcss --config postcss.config.mjs --env production assets/css/styles.css -o assets/css/compiled/main.css --watch",
    "build": "npm run build:css && hugo --gc --minify"
  },
  "devDependencies": {
    "@tailwindcss/postcss": "^4.1.14",
    "postcss": "^8.5.6",
    "postcss-cli": "^11.0.1",
    "prettier": "3.6.2",
    "tailwindcss": "^4.1.14"
  }
}